---
import BaseHead from '@components/base_head.astro';
import Header from '@components/header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body id="home">
		<Header />
    <div class="des">10/02/24 [matterjs] engaging with my responsibilities</div>
    <script src="./_matter.js"></script>
  </body>
</html>

<style>
html,
body {
  position: relative;
  height: 100%;
}
#home canvas[resize] {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
}
.des {
  font-size: 1rem;
  color: var(--white);
  opacity: 0.5;
  position: absolute;
  bottom: 4rem;
  left: 2rem;
  margin: 0;
  padding: 0;
}
</style>
<style is:global>
body header {
  position: absolute !important;
}
</style>

